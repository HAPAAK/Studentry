<%- include("partials/header", {title: "Counsellor Index"}) %>
<%- include("partials/navbar2", {title:"Profile"} ,{navactive:"profile"}) %>

<section style="background-color: #eee;">
    <div class="container py-5">
     
  
      <div class="row">
        <div class="col-lg-4">
          <div class="card mb-4">
            <div class="card-body text-center">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
              <h5 class="my-3"><%= counsellor.firstname %> <%= counsellor.lastname %></h5>
              <p class="text-muted mb-1"><%= counsellor.registration_number %></p>
              <p class="text-muted mb-4"><%= counsellor.gender %></p>
              <p class="text-muted mb-4"><%= counsellor.phone_number %></p>
              
            </div>
          </div>
          
        </div>
        <div class="col-lg-8">
          <div class="card mb-4">
            <div class="card-body">
              <form action="/counsellorprofile" method="post" enctype="multipart/form-data">

              
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Full Name</p>
                </div>
                <div class="col-sm-9">
                  <input class="text-muted mb-0 form-control-plaintext myinp" type="text" name="fname" required autocomplete="off" value="<%= counsellor.firstname %> <%= counsellor.lastname %>" readonly="readonly">
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                  <input class="text-muted mb-0 form-control-plaintext myinp" type="text" name ="email"required autocomplete="off" value="<%= counsellor.email %>" readonly>
                </div>
              </div>
             
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Mobile</p>
                </div>
                <div class="col-sm-9">
                  <input class="text-muted mb-0 form-control-plaintext myinp" type="number" name="phn_no" required autocomplete="off" value="<%= counsellor.phone_number %>" readonly>
                </div>
              </div>
              <hr>
             
              <div class="row">
                <div class="col-lg-12 col-sm-12" >
                  
                  <button id="submit" class="btn btn-success" value="" style="float: right; margin:10px; display:none" >Submit</button>
                </div>
              </div>
            </form>
            <button id="edit" class="btn btn-info" value="" style="float: right;" onclick="editbtn()">Edit</button>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </section>
<%- include("partials/footer") %>
