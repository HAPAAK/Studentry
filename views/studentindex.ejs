<%- include("partials/header", {title: "Studenttindex"}) %>
<%- include("partials/navbar", {title:"Home"}) %>

<div class="newsinfo" >
<h1>Take a Look at the information!</h1>
<div class="highlights-wrapper">
    <div class="book-highlights">
        <div class="book">
            <img src= "images/download.jpg" alt="image">
            <div class="summary">
                <p>Date: <%= newsinfo.createdAt %></p>
                <p>By: <%= todaygame.createdBy %></p>
                <p><%= newsinfo.news %></p>
                <a href="<%= newsinfo.newsurl%>" target="_blank">Read more...</a>
            </div>
        </div>
    </div>
</div>
</div>


<div class="main-content" >
    <div class="container">
        <div class="entry-header" style="background-color: rgb(241, 197, 197);padding: 10px;">
            <h1>Today's Riddle</h1>
            <div class="entry-title">
                <p>By : <%= todaygame.question %></p>
                <form class = "question-form" action="/studentindex" method= "post">
                    <div class ="txtb">
                        <textarea name = "question" id="question" value=  rows="15" cols="140" readonly><%= todaygame.question %></textarea>
                    </div><br>
                    <div class = "txtb">
                        <img id="frame" src="" height="500" width="1000px"> 
                    </div><br>
                    <div class="txtb">
                        <input name="answer" id ="answer" type="text" placeholder="Enter the answer" style="width: 250px;">
                    </div><br>
                    <button type="submit" class="btn btn-outline-dark btn-lg btn-block admin-btn">Post your answer</button>
                </form>
            </div><!-- -->
        </div><!-- -->
    </div>
</div>


<%- include("partials/footer") %>
