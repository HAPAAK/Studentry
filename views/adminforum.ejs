<%- include("partials/header", {title: "AdminIndex"}) %>

<% if(failure) { %>
    <div class="alert alert-danger" role="alert">
        <%= msg %>
    </div>
<% } %>

<body class = "about-us">   
    
    <header class="site-header">
        <div class="header-bar">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-10 col-lg-3">
                        <h1 class="site-branding flex">
                            <a href="/adminindex">Welcome Admin</a>
                        </h1><br>
                        
                        <a style="margin-left:35px;font-size: 18px;" href="/logout">Logout</a>
                        <a style="margin-left:35px;font-size: 18px;margin-bottom: 10px;" href="/adminindex">Post Today Question</a>
                             
                    </div>
                </div><!-- .row -->
            </div><!-- container-fluid -->
        </div><!-- header-bar -->
    </header><!-- .site-header -->
  

    <div class="main-content">
        <div class="container">
            <div class="entry-header">
                <div class="entry-title">
                    <h3> Announce a information</h3><br>
                    <form class = "question-form" action="/adminforum" method= "post">
                        <div class ="txtb">
                            <textarea name = "news" id="news" rows="15" cols="150" placeholder = "Enter your information" ></textarea>
                        </div><br>
                        <div class="txtb">
                            <input name="createdAt" id="createdAt" type="date" placeholder="Enter date" required>
                        </div><br>
                        <div class="txtb">
                            <input name="url" id ="url" type="url" placeholder="Paste url if any" style="width: 250px;">
                        </div><br>
                        <hr>
                        <h3>Raise a forum</h3>
                        <div class="txtb">
                            <p>Topic of Discussion</p>
                            <textarea name = "forumtopic" id="forumtopic" rows="15" cols="150" ></textarea>
                        </div><br>

                        <button type="submit" class="btn btn-outline-dark btn-lg btn-block admin-btn">Post information</button>
                    </form>
                </div><!-- -->
            </div><!-- -->
        </div>
    </div>
</body>


<%- include("partials/footer") %>